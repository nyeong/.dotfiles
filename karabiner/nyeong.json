{
    "title": "nyeong",
    "rules": [
        {
            "description": "Use caps_lock + spacebar as back_space",
            "manipulators": [
                {
                    "type": "basic",
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "caps_lock pressed",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": [ { "key_code": "delete_or_backspace" } ]
                }
            ]
        },
        {
            "description": "Use caps_lock + backspace as delete",
